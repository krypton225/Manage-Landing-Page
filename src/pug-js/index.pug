include ./components/_index
include ./mixins/_index

doctype html
html(lang="en")
    head
        +meta-data("Khaled Mohamed")

        +meta-desc("Just a description for Manage Landing Page project as landing page!")

        +meta-words("HTML, CSS, JS, PugJS, PostCSS, Front End Challenge, Front End Mentor")
        +meta-theme("#242d52")

        link(rel="shortcut icon" href="./public/assets/favicons/favicon.ico" type="image/x-icon")
        link(rel="manifest" href="./public/assets/favicons/site.webmanifest")

        +space()

        title Manage Landing Page

        +space()

        link(rel="stylesheet" href="./public/index.css")

    body
        main(class="main container" id="main")
            div(class="main__bg")
            //-     +bg-tablet-pattern()

            div(class="overlay" id="overlay")

            nav(class="navbar")
                div(class="navbar__logo")
                    +logo()

                +space()
                ul(class="navbar__links" id="navbar-links-container" role="list")
                    -
                        const links = [
                            { text: "pricing", url: "#" },
                            { text: "product", url: "#" },
                            { text: "about us", url: "#" },
                            { text: "careers", url: "#" },
                            { text: "community", url: "#" },
                        ];

                    each link in links
                        li(class="navbar__links__item")
                            +space()
                            a(href=link.url class="navbar__links__item__link") #{link.text}

                +space()
                +button("get started", "#")

                div(class="navbar__hamburger" id="hamburger-icon")
                    +hamburger()

                div(class="navbar__close" id="close-icon")
                    +close()

            section(class="landing")
                div(class="landing__left")
                    p(class="landing__left__title") Bring everyone together to build better products.
                    p(class="landing__left__desc") Manage makes it simple for software teams to plan day-to-day tasks while keeping the larger team goals in view.

                    +button("get started", "#")

                +space()
                div(class="landing__right")
                    +space()
                    img(src="./public/assets/images/illustration-intro.svg",
                        alt="Illustration Picture with the percentage.." draggable="false")

            section(class="about")
                div(class="about__left")
                    p(class="about__left__title") Whatâ€™s different about Manage?

                    p(class="about__left__desc") Manage provides all the functionality your team needs, without the complexity. Our software is tailor-made for modern digital product teams.


                div(class="about__right")
                    -
                        const arr = [
                            {
                                counter: "01",
                                title: "Track company-wide progress",
                                desc: "See how your day-to-day tasks fit into the wider vision. Go from tracking progress at the milestone level all the way done to the  smallest of details. Never lose sight of the bigger picture again."
                            },
                            {
                                counter: "02",
                                title: "Advanced built-in reports",
                                desc: "Set internal delivery estimates and track progress toward company goals. Our customisable dashboard helps you build out the reports you need to keep key stakeholders informed."
                            },
                            {
                                counter: "03",
                                title: "Everything you need in one place",
                                desc: "Stop jumping from one service to another to communicate, store files, track tasks and share documents. Manage offers an all-in-one team productivity solution."
                            },
                        ];

                    each item in arr
                        div(class="about__right__item")
                            div(class="about__right__item__header")
                                span(class="item-counter") #{item.counter}
                                p(class="about__right__item__header__title") #{item.title}

                            p(class="about__right__item__desc") #{item.desc}

        script(src="./public/main.bundle.js") 
        +no-script()