include ./components/_index
include ./mixins/_index

doctype html
html(lang="en")
    head
        +meta-data("Khaled Mohamed")

        +meta-desc("Just a description for Manage Landing Page project as landing page!")

        +meta-words("HTML, CSS, JS, PugJS, PostCSS, Front End Challenge, Front End Mentor")
        +meta-theme("#242d52")

        link(rel="shortcut icon" href="./public/assets/favicons/favicon.ico" type="image/x-icon")
        link(rel="manifest" href="./public/assets/favicons/site.webmanifest")

        +space()

        title Manage Landing Page

        +space()

        link(rel="stylesheet" href="./public/index.css")

    body
        main(class="main" id="main")
            div(class="main__bg")
            //-     +bg-tablet-pattern()

            div(class="overlay" id="overlay")

            nav(class="navbar container")
                div(class="navbar__logo")
                    +logo()

                +space()
                ul(class="navbar__links" id="navbar-links-container" role="list")
                    -
                        const links = [
                            { text: "pricing", url: "#" },
                            { text: "product", url: "#" },
                            { text: "about us", url: "#" },
                            { text: "careers", url: "#" },
                            { text: "community", url: "#" },
                        ];

                    each link in links
                        li(class="navbar__links__item")
                            +space()
                            a(href=link.url class="navbar__links__item__link") #{link.text}

                +space()
                +button("btn", "get started", "#")

                div(class="navbar__hamburger" id="hamburger-icon")
                    +hamburger()

                div(class="navbar__close" id="close-icon")
                    +close()

            section(class="landing container")
                div(class="landing__left")
                    p(class="landing__left__title") Bring everyone together to build better products.
                    p(class="landing__left__desc") Manage makes it simple for software teams to plan day-to-day tasks while keeping the larger team goals in view.

                    +button("btn", "get started", "#")

                +space()
                div(class="landing__right")
                    +space()
                    img(src="./public/assets/images/illustration-intro.svg",
                        alt="Illustration Picture with the percentage.." draggable="false")

            section(class="about container")
                div(class="about__left")
                    p(class="about__left__title") What’s different about Manage?

                    p(class="about__left__desc") Manage provides all the functionality your team needs, without the complexity. Our software is tailor-made for modern digital product teams.


                div(class="about__right")
                    -
                        const arr = [
                            {
                                counter: "01",
                                title: "Track company-wide progress",
                                desc: "See how your day-to-day tasks fit into the wider vision. Go from tracking progress at the milestone level all the way done to the  smallest of details. Never lose sight of the bigger picture again."
                            },
                            {
                                counter: "02",
                                title: "Advanced built-in reports",
                                desc: "Set internal delivery estimates and track progress toward company goals. Our customisable dashboard helps you build out the reports you need to keep key stakeholders informed."
                            },
                            {
                                counter: "03",
                                title: "Everything you need in one place",
                                desc: "Stop jumping from one service to another to communicate, store files, track tasks and share documents. Manage offers an all-in-one team productivity solution."
                            },
                        ];

                    each item in arr
                        div(class="about__right__item")
                            div(class="about__right__item__header")
                                +space()
                                span(class="item-counter") #{item.counter}
                                p(class="about__right__item__header__title") #{item.title}

                            p(class="about__right__item__desc") #{item.desc}

            section(class="testimonials container")
                p(class="testimonials__title") What they’ve said

                div(class="testimonials__content")
                    -
                        const arrTestimonials = [
                            {
                                imageURL: "./public/assets/images/avatars/avatar-richard.webp",
                                personName: "Anisha Li",
                                sentence: "Manage has supercharged our team’s workflow. The ability to maintain visibility on larger milestones at all times keeps everyone motivated."
                            },
                            {
                                imageURL: "./public/assets/images/avatars/avatar-richard.webp",
                                personName: "Ali Bravo",
                                sentence: "We have been able to cancel so many other subscriptions since using Manage. There is no more cross-channel confusion and everyone is much more focused."
                            },
                            {
                                imageURL: "./public/assets/images/avatars/avatar-richard.webp",
                                personName: "Richard Watts",
                                sentence: "Manage allows us to provide structure and process. It keeps us organized and focused. I can’t stop recommending them to everyone I talk to!"
                            }
                        ];

                    each item in arrTestimonials
                        +space()
                        div(class="testimonials__content__card")
                            div(class="testimonials__content__card__img")
                                +space()
                                img(src=item.imageURL, alt=item.personName + "'s image" draggable="false")

                            +space()
                            span(class="testimonials__content__card__name") #{item.personName}

                            p(class="testimonials__content__card__sentence") #{item.sentence}

                +space()
                div(class="get-started-btn")
                    +button("btn", "get started", "#")

            section(class="simplify")
                div(class="simplify__content container")
                    div(class="simplify__content__left")
                        p(class="simplify__content__left__text") Simplify how your team works today.

                    div(class="simplify__content__right")
                        +space()
                        +button("btn reverse", "get started", "#")

            footer(class="footer")
                div(class="container")
                    div(class="footer__content")
                        div(class="footer__content__left")
                            div(class="footer__content__left__logo")
                                +logo("#ffffff")

                            div(class="footer__content__left__social")
                                a(href="https://www.facebook.com" target="_blank")
                                    +facebook()

                                a(href="https://www.youtube.com" target="_blank")
                                    +youtube()

                                a(href="https://www.twitter.com" target="_blank")
                                    +twitter()

                                a(href="https://www.pinterest.com" target="_blank")
                                    +pinterest()

                                a(href="https://www.instagram.com" target="_blank")
                                    +instagram()

                            p(class="footer__content__left__copyright") Copyright 2020. All Rights Reserved

                        div(class="footer__content__center")
                            -
                                const footerFirstLinks = [
                                    {
                                        linkURL: "#",
                                        text: "home"
                                    },
                                    {
                                        linkURL: "#",
                                        text: "pricing"
                                    },
                                    {
                                        linkURL: "#",
                                        text: "products"
                                    },
                                    {
                                        linkURL: "#",
                                        text: "about us"
                                    }
                                ];

                                const footerSecondLinks = [
                                    {
                                        linkURL: "#",
                                        text: "careers"
                                    },
                                    {
                                        linkURL: "#",
                                        text: "community"
                                    },
                                    {
                                        linkURL: "#",
                                        text: "privacy policy"
                                    }
                                ]

                            ul(class="footer__content__center__first-list" role="list")
                                each item in footerFirstLinks
                                    li(class="footer__content__center__first-list__item")
                                        +space()
                                        a(href=item.linkURL) #{item.text}

                            ul(class="footer__content__center__second-list" role="list")
                                each item in footerSecondLinks
                                    li(class="footer__content__center__second-list")
                                        +space()
                                        a(href=item.linkURL) #{item.text}

                        div(class="footer__content__right")
                            div(class="footer__content__right__header")
                                div(class="footer__content__right__header__input")
                                    input(type="text" name="inbox" placeholder="Updates in your inbox…")
                                +button("btn", "go", "#")

                            p(class="footer__content__right__copyright") Copyright 2020. All Rights Reserved

        script(src="./public/main.bundle.js") 
        +no-script()